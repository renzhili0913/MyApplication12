<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageButton
        android:id="@+id/image_return"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_action_return"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="@id/tablayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tablayout"
        app:layout_constraintRight_toLeftOf="@id/tablayout"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/image_return"
        app:layout_constraintRight_toLeftOf="@id/image_share"/>
    <ImageButton
        android:id="@+id/image_share"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_action_share"
        app:layout_constraintTop_toTopOf="@id/tablayout"
       app:layout_constraintBottom_toBottomOf="@id/tablayout"
        app:layout_constraintLeft_toRightOf="@id/tablayout"
        app:layout_constraintRight_toLeftOf="@id/image_dian"/>
    <ImageButton
        android:id="@+id/image_dian"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_action_dian"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        app:layout_constraintLeft_toRightOf="@id/image_share"
        app:layout_constraintTop_toTopOf="@id/tablayout"
       app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tablayout"/>
    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="#ccc"
        app:layout_constraintTop_toBottomOf="@id/tablayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/but_text"/>
    <TextView
        android:id="@+id/but_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加入购物车"
        android:background="#f00"
        android:padding="15dp"
        android:textColor="#fff"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>